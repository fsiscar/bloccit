<h1>New Advertisement</h1>
<%= form_for @advertisement do |f|%>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Enter advertisement title" %>
  </div>
  <div>
    <%= f.label :copy %>
    <%= f.text_area :copy, rows: 5, placeholder: "Enter advertisement copy" %>
  </div>
  <div>
    <%= f.label :price %>
    <%= f.text_field :price, placeholder: "Enter price" %>
  </div>
  <div>
    <%= f.submit "Save" %>
  </div>
<% end %>
